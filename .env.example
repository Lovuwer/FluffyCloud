# Application
NODE_ENV=development
PORT=3000
APP_DOMAIN=http://localhost:3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/iam_db?schema=public

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
SESSION_TTL_SECONDS=86400

# JWT Configuration
JWT_PRIVATE_KEY_PATH=./keys/private.pem
JWT_PUBLIC_KEY_PATH=./keys/public.pem
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d
JWT_ISSUER=iam-platform

# Password Configuration
BCRYPT_COST_FACTOR=12

# OAuth2 Configuration
OAUTH_ACCESS_TOKEN_EXPIRY=900
OAUTH_REFRESH_TOKEN_EXPIRY=604800

# SAML Configuration (SP private key for signing)
SAML_SP_PRIVATE_KEY_PATH=./keys/saml-sp.pem
SAML_SP_CERTIFICATE_PATH=./keys/saml-sp.crt
